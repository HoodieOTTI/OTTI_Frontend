{
  "compilerOptions": {
    "target": "esnext", // Set to esnext or es2015+ as needed
    "module": "esnext", // Using ESNext module system
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react", // Set JSX handling to React
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler", // Use bundler for module resolution
    "noEmit": true, // Disable emitting files (use "emitDeclarationOnly" if you want to emit .d.ts files only)
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true, // Ensures compatibility with non-ES modules
    "resolveJsonModule": true // Allow importing JSON modules
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
